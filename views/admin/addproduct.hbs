<div class="container mt-5">
  <div class="col py-3">
    <section>
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card" style="border-radius: 15px">
                <div class="card-body p-5">
                  <h5 class="text-center mb-5">Add Product</h5>

                  <form
                    action="/admin/add-product"
                    method="POST"
                    enctype="multipart/form-data"
                  >
                    <div class="form-outline mb-4">
                      <label class="form-label" for="form3Example1cg">Product
                        Name</label>
                      <input
                        type="text"
                        id="product"
                        name="product"
                        class="form-control form-control-lg"
                      />
                    </div>

                    <div class="form-outline mb-4">
                      <label
                        class="form-label"
                        for="form3Example3cg"
                      >Price</label>
                      <input
                        type="num"
                        id="price"
                        name="price"
                        class="form-control form-control-lg"
                      />
                    </div>

                    <div class="form-outline mb-4">
                      <label
                        class="form-label"
                        for="form3Example4cg"
                      >Category</label>
                      <select
                        class="form-select"
                        id="category"
                        name="category"
                        aria-label="Default select example"
                      >
                        {{#each categories}}
                          {{#unless this.isBlocked}}
                            <option
                              value="{{this._id}}"
                            >{{this.category}}</option>
                          {{/unless}}
                        {{/each}}
                      </select>
                    </div>

                    <div class="form-outline mb-4">
                      <label
                        class="form-label"
                        for="form3Example4cdg"
                      >Description</label>
                      <input
                        type="text"
                        id="description"
                        name="description"
                        class="form-control form-control-lg"
                      />
                    </div>
                    <div class="form-outline mb-4">
                      <label
                        class="form-label"
                        for="form3Example4cdg"
                      >Stock</label>
                      <input
                        type="num"
                        id="stock"
                        name="stock"
                        class="form-control form-control-lg"
                      />
                    </div>
                    <div class="form-outline mb-4">
                      <label class="form-label" for="customFile">Choose image</label>
                      <input
                        type="file"
                        id="image"
                        name="image"
                        class="form-control"
                        required
                      />
                    </div>

                    <div class="d-flex justify-content-center">
                      <button
                        type="submit"
                        value="submit"
                        class="btn text-white bg-success"
                      >
                        Add Product
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

</div>