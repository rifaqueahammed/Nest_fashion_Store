<div class="container">
{{#if cartProducts.numberOfItems.totalItems}}
  <section class="h-100 gradient-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
          <div class="card mb-4">
            <div class="card-header py-3">

              <h5
                class="mb-0"
              >Cart-{{cartProducts.numberOfItems.totalItems}}-items</h5>
            </div>
            <div class="card-body">
              <!-- Single item -->
              {{#each cartProducts.data}}
                <hr class="my-4" />

                <!-- Single item -->
                <div class="row" id="{{this.productItem}}productbody">
                  <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                    <!-- Image -->
                    <div
                      class="bg-image hover-overlay hover-zoom ripple rounded"
                      data-mdb-ripple-color="light"
                    >
                      <img
                        src="/images/{{this.productDetails._id}}.jpg"
                        class="w-100"
                      />
                    </div>
                    <!-- Image -->
                  </div>

                  <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                    <!-- Data -->
                    <p class="fs-5"><strong
                      >{{this.productDetails.product_name}}</strong></p>
                    <p class="text-secondary"><strong
                      ><span><i class="bi bi-currency-rupee"></i>{{this.productDetails.price}}</strong></p>
                    <button
                      type="button"
                      class="btn btn-primary btn-sm me-1 mb-2"
                      onclick="deleteProduct('{{this.productItem}}')"
                      data-mdb-toggle="tooltip"
                      title="Remove item"
                    >
                      <i class="fas fa-trash"></i>
                    </button>
                    <button
                      type="button"
                      class="btn btn-danger btn-sm mb-2"
                      data-mdb-toggle="tooltip"
                      title="Move to the wish list"
                    >
                      <i class="fas fa-heart"></i>
                    </button>
                    <!-- Data -->
                  </div>

                  <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <!-- Quantity -->
                    <div class="d-flex mb-4" style="max-width: 300px">
                      <button
                        class="btn btn-primary px-3 me-2"
                        onclick="changeQuantity('{{this.productItem}}',-1)"
                      >
                        <i class="fas fa-minus"></i>
                      </button>
                      <span
                        id="{{this.productItem}}"
                      >{{this.productQuantity}}</span>
                      <button
                        class="btn btn-primary px-3 ms-2"
                        onclick="changeQuantity('{{this.productItem}}',1)"
                      >
                        <i class="fas fa-plus"></i>
                      </button>
                    </div>
                    <!-- Quantity -->

                    <!-- Price -->
                    <p class="text-start text-md-center fs-5">
                      <strong>Total<span
                          id="{{this.productItem}}p"
                          class="ms-2"
                        ><span><i class="bi bi-currency-rupee"></i>{{this.productPrice}}</span></strong>
                    </p>
                    <!-- Price -->
                  </div>
                </div>
              {{/each}}
              <!-- Single item -->
            </div>
          </div>

        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0"
                >
                  Total MRP
                  <span id="totalAmount1"><span><i class="bi bi-currency-rupee"></i>
                    {{cartProducts.totalAmount.Amount}}</span>
                </li>
                
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3"
                >
                  <div>
                    <strong>Total amount</strong>
                  </div>
                  <span id="totalAmount2"><strong><span><i class="bi bi-currency-rupee"></i>
                      {{cartProducts.totalAmount.Amount}}</strong></span>
                </li>
              </ul>
              <div class="d-grid">
                <a href="/checkOut" class="text-center">
                  <button
                  type="button"
                  class="btn btn-success btn-lg btn-block "
                >
                  CHECKOUT
                </button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{else}}
  <section>
  <div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5></h5>
        </div>
        <div class="card-body cart">
          <div class="col-sm-12 empty-cart-cls text-center">
           <i class="bi bi-cart-fill fa-6x text-info"></i>
            <h3><strong>Your Cart is Empty</strong></h3>
            <a 
              href="/"
              class="btn btn-info cart-btn-transform m-3 text-decoration-none"
              data-abc="true"
              >Continue Shopping</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
{{/if}}
</div>