     <!-- Body -->
<div class="continer mt-3">
  <div class="mt-3 d-flex justify-content-center">
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Name</p>
            </div>
            <div class="col-sm-9">
              <p class="mb-0">{{usersession.name}}</p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Email</p>
            </div>
            <div class="col-sm-9">
              <p class="mb-0">{{usersession.email}}</p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Mobile</p>
            </div>
            <div class="col-sm-9">
              <p class="mb-0">{{usersession.mobile_number}}</p>
            </div>
          </div>

          <hr />

          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Gender</p>
            </div>
            <div class="col-sm-9">
              <p class=" mb-0">{{address.permanentAddress.gender}} </p>
            </div>
          </div>

          <hr />

          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Address </p>
            </div>
            <div class="col-sm-9">
              <p class=" mb-0">
                {{address.permanentAddress.housename}}
                <br />
                 {{address.permanentAddress.area}}<br />
                {{address.permanentAddress.landmark}}
                <br />
                {{address.permanentAddress.district}} 
                {{address.permanentAddress.state}}
                <br />
                {{address.permanentAddress.postoffice}}
                {{address.permanentAddress.pincode}}
              </p>
            </div>
          </div>
          <hr />
          <div>
  
            <button
              type="button"
              class="btn btn-success"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              data-bs-whatever="@mdo"
            >
              Add/Edit Address
            </button>
            <div
              class="modal fade"
              id="exampleModal"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                      Add New Address
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <form action="/user/addPermanentAddress" method="post">
                    <div class="modal-body">
                      {{!-- <div class="mb-3">
                        <label
                          for="recipient-name"
                          class="col-form-label"
                        >Name:</label>
                        <input
                          required
                          type="text"
                          class="form-control"
                          id="name"
                          name="name"
                        />
                        <p id="nameError" style="color: red"></p>
                      </div> --}}
                      {{!-- <div class="mb-3">
                        <label
                          for="recipient-name"
                          class="col-form-label"
                        >Mobile Number:</label>
                        <input
                          required
                          type="text"
                          class="form-control"
                          id="mobile"
                          name="mobile_number"
                        />
                        <p id="mobileError" style="color: red"></p>
                      </div> --}}
                      <div class="mb-3">
                        <label
                          for="recipient-name"
                          class="col-form-label"
                        >Gender:</label>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="gender"
                          name="gender">
                     <option selected></option>
                    <option value="Men">Men</option>
                     <option value="Women">Women</option>
                    </select>
                        <p id="mobileError" style="color: red"></p>
                      </div>
                       
                      <div class="mb-3">
                        <label
                          for="recipient-name"
                          class="col-form-label"
                        >Housename:</label>
                        <input
                          required
                          type="text"
                          class="form-control"
                          id="housename"
                          name="housename"
                          value="{{address.permanentAddress.housename}}"
                        />
                        <p id="houseError" style="color: red"></p>
                      </div>
                      <div class="mb-3">
                        <label
                          for="recipient-name"
                          class="col-form-label"
                        >Area:</label>
                        <input
                          required
                          type="text"
                          class="form-control"
                          id="area"
                          name="area"
                           value="{{address.permanentAddress.area}}"
                        />
                        <p id="areaError" style="color: red"></p>
                      </div>
                      <div class="mb-3">
                        <label
                          for="recipient-name"
                          class="col-form-label"
                        >Landmark:</label>
                        <input
                          required
                          type="text"
                          class="form-control"
                          id="landmark"
                          name="landmark"
                           value="{{address.permanentAddress.landmark}}"
                        />
                        <p id="landmarkError" style="color: red"></p>
                      </div>
                      <div class="mb-3">
                        <div class="row">
                          <div class="col-md-6 mb-3">
                            <label for="firstName">District</label>
                            <input
                              required
                              type="text"
                              class="form-control"
                              id="district"
                              name="district"
                              value="{{address.permanentAddress.district}}"
                              
                            />
                            <p id="stateError" style="color: red"></p>
                          </div>
                          <div class="col-md-6 mb-3">
                            <label for="lastName">State</label>
                            <input
                              required
                              type="text"
                              class="form-control"
                              id="state"
                              name="state"
                              value="{{address.permanentAddress.state}}"
                            />
                            <p id="pincodeError" style="color: red"></p>
                          </div>
                        </div>
                      </div>
                      <div class="mb-3">
                        <div class="row">
                          <div class="col-md-6 mb-3">
                            <label for="firstName">Post office</label>
                            <input
                              required
                              type="text"
                              class="form-control"
                              id="postoffice"
                              name="postoffice"
                              value="{{address.permanentAddress.postoffice}}"
                            />
                            <p id="stateError" style="color: red"></p>
                          </div>
                          <div class="col-md-6 mb-3">
                            <label for="lastName">Pincode</label>
                            <input
                              required
                              type="text"
                              class="form-control"
                              id="pin"
                              name="pincode"
                              value="{{address.permanentAddress.pincode}}"
                            />
                            <p id="pincodeError" style="color: red"></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Cancel
                      </button>
                      <button
                        type="submit"
                        value="submit"
                        class="btn btn-success"
                      >
                        Add
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- Modal -->
                </div>
                
        </div>
      </div>
    </div>

  </div>

