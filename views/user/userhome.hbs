<div class="container mt-5 mb-5">
  <div class="mt-5 row justify-content-center row-cols-1 row-cols-md-3 g-4">
    {{#each products}}
      {{#unless this.isBlocked}}
        <div class="col w-auto m-4 shadow p-3 mb-5 bg-body rounded">
          <a href="/getProduct/{{this._id}}" class="text-decoration-none">
          <div class="card">
            <img
              src="/images/{{this._id}}.jpg"
              class="card-img-top img-thumbnail"
              alt=""
              style="height: 250px; width: 250px;"
            />
            <div class="card-body mx-auto">
              <h4 class="card-title text" style="color: #000000;">{{this.product_name}}</h4>
              <div class="text-center"><h5
                  class="card-title fw-bold"
                  style="color: #000000;"
                >Rs.{{this.price}}</h5></div>
              <p class="card-text" style="color: #575555;">
                {{this.description}}
              </p>
            </div>
          </div></a>
          <div class="mx-auto m-2 text-center">
              <button type="button" onclick="wishlist('{{this._id}}')" class="btn btn-danger text-white fs-5 fw-bold"><span><i class="bi bi-heart-fill fa me-2"></i>Wishlist</button>
          </div>
        </div>
      {{/unless}}
    {{/each}}
  </div>
</div>